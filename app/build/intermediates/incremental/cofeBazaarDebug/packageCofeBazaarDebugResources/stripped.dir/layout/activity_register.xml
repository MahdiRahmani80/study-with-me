<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?backgroundColor"
    tools:context=".login.register.RegisterActivity">


    <ImageView
        android:id="@+id/img_register"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="end"
        android:layout_margin="20dp"
        android:src="@drawable/book"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/register_top_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/iran_sans_black"
        android:text="@string/register_top_text"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_register"
        tools:text="sign in" />

    <TextView
        android:id="@+id/register_top_hlep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/iran_sans_light"
        android:text="@string/help_register_top"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_top_text"
        tools:text="some help text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/register_top_hlep">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bg_et_register"
            android:fontFamily="@font/iran_sans_medium"
            android:hint="@string/nickname"
            android:maxLength="50"
            android:maxLines="1"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="?colorOnPrimary"
            android:textColorHint="?colorOnPrimaryContainer"
            android:textSize="16sp"
            tools:text="John Due" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bg_et_register"
            android:fontFamily="@font/iran_sans_medium"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="?colorOnPrimary"
            android:textColorHint="?colorOnPrimaryContainer"
            android:textSize="16sp"
            tools:text="09123456789" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/iran_sans_black"
            android:padding="14dp"
            android:text="@string/btin_register"
            android:textColor="?colorOnPrimary" />

        <TextView
            android:id="@+id/tv_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="I have an account"
            android:text="@string/hove_an_account"
            android:fontFamily="@font/iran_sans_medium"
            android:textSize="12sp"
            android:layout_marginTop="14dp"
            android:textColor="?colorPrimaryVariant"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>